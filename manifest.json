{
  "manifest_version": 3,
  "name": "Comiketter",
  "version": "1.0.0",
  "description": "コミックマーケット参加者向けX（旧Twitter）専用Chrome拡張機能",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["apiInterceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end",
      "world": "ISOLATED"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Comiketter"
  },
  "options_page": "options.html",
  "chrome_url_overrides": {
    "bookmarks": "bookmarks.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "icons/*.svg", "dist/*.js"],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://cdn.syndication.twimg.com https://react-tweet.vercel.app https://api.twitter.com; img-src 'self' https://pbs.twimg.com https://abs.twimg.com https://images.unsplash.com https://*.twimg.com https://*.twitter.com data: blob:; media-src 'self' https://video.twimg.com https://*.twimg.com blob:;"
  }
} 